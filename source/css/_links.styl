// links style
@require '_variables'

.links
    position: relative
    border-top: 1px dashed #CCC
    padding-top: 10px
    margin-top: 15px
    height: 30px
    line-height: @height
    text-align: center
    color: #999
    overflow: hidden

    a
        &.prev
            position: absolute
            left: 0
            svg
                margin-right: 5px
                transform: rotate(180deg)

        &.next
            position: absolute
            right: 0
            svg
                margin-left: 5px
