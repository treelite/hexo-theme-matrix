// aside style
@require '_variables'

aside
    position: fixed
    top: 0
    left: 0
    bottom: 0
    font-size: $font-size + 2px
    width: $width-aside - 2 * $aside-padding
    padding: $aside-padding
    border-right: 1px solid #CCC
    background-color: #EEE
    background-size: $width-aside
    background-position: left center
    background-repeat: no-repeat

    &::before
        content: ""
        display: block
        position: absolute
        top: 0
        left: 0
        right: 0
        bottom: 0
        background: #EEE
        z-index: -1

    &.show-bg
        &::before
            opacity: 0
            transition: opacity 1s ease

    .profile
        text-align: center
        color: #FFF
        text-shadow: 0 0 1px #000
        border-radius: 10px;

        header
            display: block
            margin: 0 auto 15px
            width: 150px
            height: @width
            border: 5px solid #FFF
            border-radius: 999px
            box-shadow: 0 0 20px #333
            background: url(img/avatar.jpg) -5px -5px no-repeat

            a
                display: block
                width: 100%
                height: 100%
        p
            margin: 10px 0

        h1
            margin: 0
            font-size: 25px

    .links
        position: absolute
        left: $aside-padding
        right: $aside-padding
        bottom: 70px
        padding: 5px
        font-size: 0
        border-radius: 5px
        text-align: center
        background: rgba(255, 255, 255, 0.3)
        a
            display: inline-block
            margin: 0 5px
            width: 32px
            height: 32px
            background-position: 0 0
            background-repeat: no-repeat
            background-size: 100%
            text-indent: -999px
            -webkit-filter: grayscale(100%)
            filter: grayscale(100%)

            &:hover
                -webkit-filter: none
                filter: none

            &.github
                background-image: url(img/GitHub-64px.png)
            &.douban
                background-image: url(img/Douban-64px.png)
            &.email
                background-image: url(img/Gmail-64px.png)
            &.feed
                background-image: url(img/RSS-64px.png)

    .cpr
        position: absolute
        text-align: center
        font-size: $font-size - 2px
        color: #BBB
        left: 0
        right: 0
        bottom: 10px

        p
            margin: 0
        a
            color: #BBB
            text-decoration: underline
