// main
@require '_variables'

html,
body
    margin: 0
    padding: 0
    font: $font-size/$line-height "HelveticaNeueLight", "HelveticaNeue-Light", "Helvetica Neue", Helvetica, "STHeitiSC-Light", Arial, "Lantinghei SC", "Microsoft YaHei", sans-serif
    color: #333
    background: #FFF
    min-width: 960px
    position: relative

a
    color: #4183C4
    text-decoration: none

    &:hover
        text-decoration: underline

h1,
h2,
h3,
h4,
h5,
h6
    font-weight: normal

@import '_aside'
@import '_main'
@import '_highlight'
