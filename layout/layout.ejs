            </section>
            <section class="links">
                <%- mail_to(config.email, 'Email', {class: 'gmail'}) %><%- link_to('https://github.com/treelite', 'GitHub', {external: true, class: 'github'})%><%- link_to('http://www.douban.com/people/treelite/', 'Douban', {external: true, class: 'douban'})%><% if (config.feed) { link_to(url_for(config.feed.path), 'RSS', {external: true, class: 'rss'}) } %>
            </section>
            <section class="cpr">
                <p>Â© <%= (new Date()).getFullYear() %> Treelite</p>
