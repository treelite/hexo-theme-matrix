<article>
    <h1><%= page.title %></h1>
    <%- page.content %>
    <p class="meta">
        <time datetime="<%= page.date.toDate().toISOString() %>"><%= page.date.format(config.date_format) %></time>
    </p>
</article>

<section class="links">
<% if (page.prev) { %>
    <a href="<%- url_for(page.prev.path) %>" class="prev"><%- svg('arrow', 20, 16) %><%= page.prev.title %></a>
<% } %>
<% if (page.next) { %>
    <a href="<%- url_for(page.next.path) %>" class="next"><%= page.next.title %><%- svg('arrow', 20, 16) %></a>
<% } %>
</section>

<% if (config.disqus_shortname) { %>
<section id="disqus_thread" class="comments"></section>
<script async="async" src="//<%=config.disqus_shortname%>.disqus.com/embed.js"></script>
<% } %>
